{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-md-6 p-4">

                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="alert alert-info text-center">
                            Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>, 
                            <a href="{{ path('logout') }}" class="text-decoration-none fw-bold">Se déconnecter</a>
                        </div>
                    {% endif %}

                    <p class="h3 mb-4 text-center text-primary fw-bold">Veuillez vous connecter</p>
                    
                    <div class="mb-3">
                        <label for="username" class="form-label fw-bold">Adresse Mail</label>
                        <input type="text" value="{{ last_username }}" name="_username" id="username" 
                                class="form-control" autocomplete="username" required autofocus>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label fw-bold">Mot de passe</label>
                        <input type="password" name="_password" id="password" 
                                class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="d-grid">
                        <button class="btn btn-primary btn-lg fw-bold" type="submit">
                            Connexion
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
{% endblock %}
